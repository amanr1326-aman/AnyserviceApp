<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_gravity="right" />
    <LinearLayout
        android:id="@+id/customer_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_edittext"
            android:layout_width="match_parent"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_action_search"
            android:drawableRight="@drawable/ic_action_search" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <helper.IconTextView
                android:id="@+id/user_icon_textview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/icon_filter"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/categories_spinner"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content"/>
            <helper.IconTextView
                android:id="@+id/distance_icon_textview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/icon_distance"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <ListView
            android:id="@+id/services_listview"
            android:layout_width="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_height="fill_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/seller_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <helper.IconTextView
                android:id="@+id/services"
                android:background="@drawable/round_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:text="@string/services"
                android:textColor="@color/colorWhite"
                android:layout_height="@dimen/nav_header_height"
                android:layout_marginEnd="20dp" />
            <helper.IconTextView
                android:id="@+id/distance"
                android:background="@drawable/round_button"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/distance"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_height="@dimen/nav_header_height"/>
        </LinearLayout>
        <androidx.appcompat.widget.SwitchCompat
            android:layout_margin="20dp"
            android:id="@+id/active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/online"/>
        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/scanner"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/scanning_gradient"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>