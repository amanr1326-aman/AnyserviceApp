<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/service_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/any_service_icon_foreground"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/service_company"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingEnd="13dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/verified"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="top|right"
                    android:src="@drawable/ic_baseline_verified"
                    />

            </FrameLayout>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/service_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/service_name"
        android:textIsSelectable="true"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/service_category"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/service_price"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_rupee_indian" />
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/delivery_cost_text"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delivery_price"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_rupee_indian" />

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="3"
        android:textIsSelectable="true"
        android:focusable="true"
        tools:ignore="TextViewEdits" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/color"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="Color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/colorspinner"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/size"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/sizespinner"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/other"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="Others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/otherspinner"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/quantity_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:visibility="visible"
            android:background="@drawable/round_button"
            android:orientation="horizontal">
            <Button
                android:id="@+id/minus_button"
                android:layout_width="0dp"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/minus"
                android:background="@color/colorAccent"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:gravity="center" />
            <TextView
                android:id="@+id/quantity_textview"
                android:layout_width="0dp"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/_1"
                android:background="@color/colorAccent"
                android:gravity="center" />
            <Button
                android:id="@+id/plus_button"
                android:layout_width="0dp"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/plus"
                android:background="@color/colorAccent"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:gravity="center" />
        </LinearLayout>
        <helper.IconTextView
            android:id="@+id/checkout_button"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:text="@string/buy_now"/>
        <helper.IconTextView
            android:id="@+id/add_to_cart"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:background="@drawable/round_button"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/cart"/>


    </LinearLayout>
</LinearLayout>