<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateServiceActivity">
    <Button
        android:id="@+id/back_button"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:text="@string/back_text"
        android:textColor="@color/colorAccent" />
    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.3">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/search_edittext"
                android:layout_width="match_parent"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                app:layout_anchor="@id/back_button"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_action_search" />
                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="@string/my_services"/>
            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>
                <ListView
                    android:id="@+id/myservices"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/viewB"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            android:layout_weight="0.7">
            <LinearLayout
                android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <TextView
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="@string/create_a_service"/>
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_camera"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="@string/service_name"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:padding="10dp"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="@string/price_text"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="number"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <CheckBox
                    android:id="@+id/delivery"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:checked="true"
                    android:textColor="@color/colorWhite"
                    android:text="@string/need_delivery_charge_for_this_service"/>
                <CheckBox
                    android:id="@+id/measurable"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/stockable_for_e_g_milk_packets_3"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="@string/category"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="@string/description"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Note: Use below fields only when you need to create variants of this product or service."
                    android:textColor="@color/colorWhite"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">
<!--                    <com.google.android.material.textfield.TextInputLayout-->
<!--                        android:layout_weight="1"-->
<!--                        android:layout_width="0dp"-->
<!--                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Inverse"-->
<!--                        android:layout_height="wrap_content">-->
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/variant_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="2dp"
                        android:background="@drawable/rounded_edittext"/>
<!--                    </com.google.android.material.textfield.TextInputLayout>-->
<!--                    <com.google.android.material.textfield.TextInputLayout-->
<!--                        android:layout_weight="1"-->
<!--                        android:layout_width="0dp"-->
<!--                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Inverse"-->
<!--                        android:layout_height="wrap_content">-->
                    <EditText
                        android:id="@+id/variant_value"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="@string/value"
                        android:layout_marginHorizontal="2dp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="10dp"/>
<!--                    </com.google.android.material.textfield.TextInputLayout>-->
                    <Button
                        android:id="@+id/add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_marginHorizontal="2dp"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@drawable/round_button"
                        android:text="@string/add"/>

                </LinearLayout>
                <ListView
                    android:id="@+id/variant_listview"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="50dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/create_service"
        app:constraintSet="@id/viewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/ic_baseline_add_24"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>